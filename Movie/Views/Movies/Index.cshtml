@model IEnumerable<Movie.Models.Movie>

 @{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

 <h2>Index - Movie</h2>

@Html.ActionLink("Create New Movie", "New", "Movies", null, new { @class = "btn btn-primary", @role = "button", @style = "margin-bottom:20px" })

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>Number in stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.NumberInStock</td>
            </tr>
        }
    </tbody>
</table>