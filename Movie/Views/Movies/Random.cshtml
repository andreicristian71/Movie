@model Movie.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}
<h2 class="@className"> @Model.Movie.Name </h2> @*a ((Movie.Models.Movie)ViewData["Movie"]).Name sau a Model.Name*@


    @if (Model.Customers.Count == 0)
    {
        <text>No one has rented this movie before.</text>
    }
    else
    {
        <ul>
            @foreach (var customer in Model.Customers)
            {
                <li>@customer.Name</li>

            }
        </ul>
    }
    